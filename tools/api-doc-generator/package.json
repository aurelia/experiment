{
  "name": "api-doc-generator",
  "version": "0.5.0",
  "description": "Aurelia API document generator",
  "private": true,
  "license": "MIT",
  "homepage": "https://aurelia.io",
  "repository": {
    "type": "git",
    "url": "https://github.com/aurelia/aurelia"
  },
  "scripts": {
    "build": "./node_modules/.bin/gulp build",
    "clean": "node scripts/del.js",
    "test-watch": "npm run clean & mocha  -r  scripts/tshook.js --watch-extensions ts --watch -R min --timeout 10000 test/**/*.spec.ts",
    "test": "npm run clean & mocha -r  scripts/tshook.js --timeout 10000 test/**/*.spec.ts",
    "coverage": "npm run clean & nyc -r lcov -e .ts -x \"*.ts\" mocha  -r  scripts/tshook.js --timeout 10000 test/**/*.spec.ts && nyc report",
    "eslint": "./node_modules/.bin/eslint --fix ./src/**/**/*.ts"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.js",
      "**/*.spec.ts"
    ],
    "reporter": [
      "html",
      "clover",
      "json"
    ],
    "all": true
  },
  "dependencies": {
    "fs-extra": "^8.1.0",
    "indent.js": "^0.3.4",
    "lodash": "^4.17.15",
    "markdown-table": "^1.1.3",
    "nunjucks": "^3.2.0",
    "parse5": "^5.1.1",
    "parse5-htmlparser2-tree-adapter": "^5.1.1",
    "parse5-traverse": "^1.0.3",
    "traverse": "^0.6.6",
    "ts-morph": "^6.0.2"
  },
  "devDependencies": {
    "@types/chai": "^4.2.7",
    "@types/fs-extra": "^8.0.1",
    "@types/gulp": "^4.0.6",
    "@types/lodash": "^4.14.149",
    "@types/mocha": "^5.2.7",
    "@types/node": "^13.1.1",
    "@types/nunjucks": "^3.1.3",
    "@types/parse5": "^5.0.2",
    "@types/parse5-htmlparser2-tree-adapter": "^5.0.1",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "gulp": "^4.0.2",
    "gulp-clean": "^0.4.0",
    "gulp-typescript": "^5.0.1",
    "mocha": "^6.2.2",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.5.4",
    "tslib": "^1.10.0",
    "typescript": "3.7.4"
  }
}
